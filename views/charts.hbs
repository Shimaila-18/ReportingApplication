<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Boxicons CSS -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    {{!--
    <script src="https://cdnjs.cloudflare.com/ajax/libs/luxon/2.1.2/luxon.min.js"></script> --}}
    <title>Charts</title>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar">
        <div class="logo_item">
            <i class="bx bx-menu" id="sidebarOpen"></i>
            <img src="images/logo1.png" alt=""></i>Visteon EngageHub
        </div>
        <div class="navbar_content">
            <ul class="firstul">
                <li class="firstli"><a class="firsta" href="/">Home</a></li>
                <li class="firstli"><a class="firsta" href="/profile">Profile</a></li>
                <li class="firstli"><a class="firsta" href="/auth/logout">Logout</a></li>
                <i class="bi bi-grid"></i>
                <i class='bx bx-sun' id="darkLight"></i>
            </ul>
        </div>
    </nav>

    <!-- sidebar -->
    <nav class="sidebar">
        <div class="menu_content">
            <ul class="menu_items">
                <div class="menu_title menu_dahsboard"></div>
                <!-- duplicate or remove this li tag if you want to add or remove navlink with submenu -->
                <!-- start -->
                <li class="item">
                    <div href="#" class="nav_link submenu_item">
                        <span class="navlink_icon">
                            <i class="bx bx-home-alt"></i>
                        </span>
                        <span class="navlink">Survey</span>
                        <i class="bx bx-chevron-right arrow-left"></i>
                    </div>

                    <ul class="menu_items submenu">
                        <a href="/survey" class="nav_link sublink">Participate in Survey</a>
                    </ul>
                </li>
                <li class="item">
                    <div href="#" class="nav_link submenu_item">
                        <span class="navlink_icon">
                            <i class="bx bxs-color"></i>
                        </span>
                        <span class="navlink">Analytics</span>
                        <i class="bx bx-chevron-right arrow-left"></i>
                    </div>

                    <ul class="menu_items submenu">
                        <a href="/charts" class="nav_link sublink">Overview</a>
                        <a href="/SepChart" class="nav_link sublink">Detailed Data Charts</a>
                    </ul>
                </li>
            </ul>

            <ul class="menu_items">
                <div class="menu_title menu_setting"></div>
                <li class="item">
                    <a href="/profile" class="nav_link">
                        <span class="navlink_icon">
                            <i class="bx bx-user-circle"></i>
                        </span>
                        <span class="navlink">Profile</span>
                    </a>
                </li>
                <li class="item">
                    <a href="/contact" class="nav_link">
                        <span class="navlink_icon">
                            <i class="bx bxl-gmail"></i>
                        </span>
                        <span class="navlink">Contact Us</span>
                    </a>
                </li>
                <li class="item">
                    <a href="#" class="nav_link">
                        <span class="navlink_icon">
                            <i class="bx bx-cog"></i>
                        </span>
                        <span class="navlink">Setting</span>
                    </a>
                </li>
            </ul>

            <!-- Sidebar Open / Close -->
            <div class="bottom_content">
                <div class="bottom expand_sidebar">
                    <span> Expand</span>
                    <i class='bx bx-log-in'></i>
                </div>
                <div class="bottom collapse_sidebar">
                    <span> Collapse</span>
                    <i class='bx bx-log-out'></i>
                </div>
            </div>
        </div>
    </nav>


    {{!-- graphs and charts content --}}
    <div class="charts">
        {{!-- line chart --}}
        <div id="line" class="chart-container">
            <h4>Overall Rating Trends by Month</h4>
            <p></p>
            <canvas id="chart1" class="chart"></canvas>
        </div>

        {{!-- bar chart --}}
        <div id="bar" class="chart-container">
            <h4>Comparative Analysis of Department Ratings</h4>
            <p></p>
            <canvas id="chart2" class="chart"></canvas>
        </div>

        {{!-- pie chart --}}
        <div id="pie" class="chart-container">
            <h4>Employee Satisfaction Breakdown</h4>
            <p></p>
            <canvas id="chart3" class="chart"></canvas>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/script.js"></script>
    <script src="/chart.js"></script>
</body>

</html>